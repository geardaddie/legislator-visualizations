ext": "."}, "#tail": "\n\t\t\t", "part": {"#tail": "\n          ", "section": {"#tail": "\n          ", "enum": {"#tail": "\n              ", "#text": "6097."}, "header": {"#tail": "\n\t\t\t\t\t\t\t", "#text": "Donation to\n\t\t\t\tpay down national debt"}, "subsection": [{"#tail": "\n              ", "text": {"#tail": "\n\t\t\t\t\t\t\t", "#text": "Every taxpayer who makes\n\t\t\t\ta return of the tax imposed by subtitle A for any taxable year may donate an\n\t\t\t\tamount (not less than $1), in addition to any payment of tax for such taxable\n\t\t\t\tyear, which shall be deposited in the general fund of the Treasury.", "@display-inline": "yes-display-inline"}, "enum": {"#tail": "\n                ", "#text": "(a)"}, "header": {"#tail": "\n                ", "#text": "General\n\t\t\t\trule"}, "#text": "\n                ", "@id": "HBFFCC1F92D07408C9B39A1A9E592ED8E"}, {"#tail": "\n              ", "text": {"#tail": "\n\t\t\t\t\t\t\t\t", "{http://namespaces.cato.org/catoxml}entity-ref": {"#tail": " for any taxable\n\t\t\t\tyear\u2014", "@entity-type": "act", "#text": "subsection (a)", "@value": "Internal Revenue Code of 1986/s:6097/ss:a", "@proposed": "true"}, "#text": "Any donation under "}, "enum": {"#tail": "\n                ", "#text": "(b)"}, "header": {"#tail": "\n                ", "#text": "Manner and time\n\t\t\t\tof designation"}, "paragraph": [{"continuation-text": {"#tail": "\n                ", "@continuation-text-level": "paragraph", "#text": "and", "@indent": "paragraph"}, "#tail": "\n                ", "text": {"#tail": "\n\t\t\t\t\t\t\t\t\t", "#text": "shall be made at the time of filing the\n\t\t\t\treturn of the tax imposed by subtitle A for such taxable year and in such\n\t\t\t\tmanner as the Secretary may by regulation prescribe, except that\u2014", "@display-inline": "yes-display-inline"}, "enum": {"#tail": "\n                  ", "#text": "(1)"}, "#text": "\n                  ", "@id": "H210EFD66C30E498FB5A4F814C60042A8", "subparagraph": [{"#tail": "\n                  ", "text": {"#tail": "\n\t\t\t\t\t\t\t\t\t", "#text": "the designation\n\t\t\t\tfor such donation shall be either on the first page of the return or on the\n\t\t\t\tpage bearing the taxpayer\u2019s signature, and"}, "enum": {"#tail": "\n                    ", "#text": "(A)"}, "@id": "HB74BB31C6D034246AEAAF3656E3FC214", "#text": "\n                    "}, {"#tail": "\n                  ", "text": {"#tail": "\n\t\t\t\t\t\t\t\t\t\t", "#text": "the designation\n\t\t\t\tshall be by a box added to the return, and the text beside the box shall\n\t\t\t\tprovide:"}, "enum": {"#tail": "\n                    ", "#text": "(B)"}, "quoted-block": {"@style": "OLC", "after-quoted-block": {"#tail": "\n                    ", "#text": ",\n\t\t\t\t  "}, "#tail": "\n\t\t\t\t\t\t\t\t\t", "@display-inline": "no-display-inline", "table": {"tgroup": {"@thead-tbody-ldg-size": "0.10.12", "@rowsep": "0", "colspec": {"@colname": "column1", "@rowsep": "0", "#tail": "\n\t\t\t\t\t\t\t\t\t\t\t\t\t", "@colsep": "0", "@min-data-value": "300", "@colwidth": "336pts", "@coldef": "txt-no-ldr"}, "@grid-typeface": "1.1", "@cols": "1", "tbody": {"#tail": "\n\t\t\t\t\t\t\t\t\t\t\t\t", "#text": "\n\t\t\t\t\t\t\t\t\t\t\t\t\t\t", "row": {"#tail": "\n\t\t\t\t\t\t\t\t\t\t\t\t\t", "entry": {"@colname": "column1", "@rowsep": "0", "@leader-modify": "clr-ldr", "@align": "left", "@stub-definition": "txt-ldr", "#tail": "\n\t\t\t\t\t\t\t\t\t\t\t\t\t\t", "#text": "By checking here, I signify that in addition to my tax\n\t\t\t\t\t\t  liability (if any), I would like to donate the included payment to be used\n\t\t\t\t\t\t  exclusively for the purpose of paying down the national debt.", "@stub-hierarchy": "1"}, "#text": "\n                              "}}, "#tail": "\n                      ", "#text": "\n                          "}, "@blank-lines-before": "1", "@rowsep": "0", "#tail": "\n\t\t\t\t\t\t\t\t\t\t\t", "@frame": "none", "@line-rules": "no-gen", "@colsep": "0", "@rule-weights": "0.0.0.0.